<IfModule mime_module>
  AddHandler application/x-httpd-ea-php82 .php .php8 .phtml
</IfModule>

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Redirect root to public/index.php
    RewriteRule ^$ public/index.php [L]
    
    # Skip rewrite if request is already for public directory
    RewriteCond %{REQUEST_URI} ^/public/
    RewriteRule ^ - [L]
    
    # For static files (images, css, js), serve from public/ if they exist
    RewriteCond %{REQUEST_URI} \.(jpg|jpeg|png|gif|css|js|ico|svg|woff|woff2|ttf|eot)$ [NC]
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ public/$1 [L]
    
    # For all other requests, route to Laravel via public/index.php
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ public/index.php [L]
</IfModule>

